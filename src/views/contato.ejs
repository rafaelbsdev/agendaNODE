<%- include("includes/head") %>
     <%- include("includes/nav") %>

          <div class="container">
               <div class="row">
                    <div class="col-lg-2"></div>

                    <div class="col-lg-8 my-3">
                         <h1 class="text-center">Contato</h1>
                         <p class="text-center lead">Crie ou edite seus contatos abaixo:</p>

                         <%- include("includes/messages") %>

                              <% if(user._id) {%>
                                   <form action="/contato/edit/<%= user._id%>" method="post">
                                        <%} else {%>
                                             <form action="/contato/register" method="post">
                                                  <%}%>
                                                       <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                       <div class="mb-3">
                                                            <label for="contato" class="form-label">Nome</label>
                                                            <input value="<%= user.nome %>" type="text" class="form-control" name="nome" id="contato" aria-describedby="emailHelp">
                                                       </div>
                                                       <div class="mb-3">
                                                            <label for="contato" class="form-label">Sobrenome</label>
                                                            <input value="<%= user.sobrenome %>" text" class="form-control" name="sobrenome" id="contato" aria-describedby="emailHelp">
                                                       </div>
                                                       <div class="mb-3">
                                                            <label for="contato" class="form-label">Email</label>
                                                            <input value="<%= user.email %>" email" class="form-control" name="email" id="contato" aria-describedby="emailHelp">
                                                       </div>
                                                       <div class="mb-3">
                                                            <label for="contato" class="form-label">Telefone</label>
                                                            <input value="<%= user.telefone %>" tel" class="form-control" name="telefone" id="contato" aria-describedby="emailHelp">
                                                       </div>
                                                       <button type="submit" class="btn btn-primary">Salvar</button>
                                             </form>

                    </div>

                    <div class="col-lg-2"></div>
               </div>
          </div>

          <%- include("includes/footer") %>